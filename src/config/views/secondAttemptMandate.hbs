<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />  
    <title> {{title}}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
     <style>
      @media screen and (max-width: 600px) {
        .wrapper {
          height: 20px !important;
          top: 20px !important;
        }

        .row {
          margin: 0 20px !important;
        }
      }

           @media screen and (min-width: 600px) {
        .wrapper {
       height: 100px;
              top: calc(50% - 100px);
        }

        .row {
          margin: 0 100px !important;
        }
      }
      * {
        font-family: 'Arial';
      }
      header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100px; /* Header Height */
        background-color: #ffffff;
      }

      header > div {
        display: table-cell;
        vertical-align: middle;
        height: 100px; /* Header Height */
      }

      #main {
        position: absolute;
        display: table-cell;
        top: 100px; /* Header Height */
        left: 0;
        bottom: 80px; /* Footer Height */
        right: 0;
        background-color: #ffffff;
        overflow-x: auto;
      }
      .wrapper {
        height: 100px;
        position: relative;
        top: calc(50% - 100px);
        transform: translateY(-50%);
      }



      .row {

  
      }



      .text-center {

      text-align: center;

      }

      footer {
        position: fixed;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 80px; /* Footer Height */
        background-color: #003E30;
      }

      footer > div {
        display: table-cell;
        vertical-align: middle;
        height: 80px; /* Footer Height */
      }

      .status{

                font-style: normal;
                font-weight: 500;
                font-size: 48px;
                line-height: 72px;
                color: #000000;

            }

      .message{
            font-style: normal;
            font-weight: 500;
            font-size: 20px;
            line-height: 30px;

            color: #000000;
            }

            .btn-group button {
              background-color: #04AA6D; /* Green background */
              border: 1px solid green; /* Green border */
              color: white; /* White text */
              padding: 10px 24px; /* Some padding */
              cursor: pointer; /* Pointer/hand icon */
            }

            /* Clear floats (clearfix hack) */
            .btn-group:after {
              content: "";
              clear: both;
              display: table;
            }

            .btn-group button:not(:last-child) {
              border-right: none; /* Prevent double borders */
            }

            /* Add a background color on hover */
            .btn-group button:hover {
              background-color: #3e8e41;
            }
    </style>
  </head>
  <div>

      <header>
        <div>
        <img crossorigin="anonymous" src="{{{logo}}}" style="margin-left: 20px";/></div>
      </header>
    <body>
    
         

          <div id="main">
              <div class="wrapper">
                  <div class="row">
                    
                    <div class="text-center">
                        <img crossorigin="anonymous" src="{{{image}}}" width="150px" height="150px"/>
                      </div>

                      <div class="text-center">
                        <span class="status">{{status}}</span>
                      </div>

                      <div class="text-center">
                        <span class="message">{{msg}}</span>
                      </div>

                      <br/>

                       <div class="text-center" id="refresh">
                        <span class="message"><strong>Please DO NOT close or refresh this page</strong></span>
                      </div>

                    </div>
              </div>
          </div>
    </body>
    <footer>
      <div>
          <p style="color:white;font-size: 20px;
          font-style: normal;
          font-weight: 500;
          font-size: 20px;
          line-height: 30px; margin: 0 20px;">
          {{footer}}
          </p>
      </div>
    </footer>
  </div>
 

  <script>
     const status = "{{{status}}}";
        let url = decodeURI("{{{url}}}");
        url = decodeURI(url.toString());
      
        if(status == "Success"){
        const pattern = /&amp;/g;
        const replacement = "&";
        url = url.replaceAll(pattern,replacement);

        }
            const myTimeout = setTimeout(() => {
              window.location.assign(url)
          }, 5000)
        

  </script>


